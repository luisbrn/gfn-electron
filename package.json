{
  "name": "geforcenow-electron",
  "appId": "com.github.hmlendea.${name}",
  "productName": "GeForce NOW",
  "version": "2.2.0",
  "description": "A Linux desktop web app for GeForce NOW",
  "main": "scripts/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --publish never",
    "lint": "eslint . --ext .js",
    "test": "node scripts/test-steam-scraper.js",
    "gen-changelog": "node scripts/gen_changelog.js",
    "format": "prettier --write \"**/*.{js,md,json}\"",
    "format:check": "prettier --check \"**/*.{js,md,json}\""
  },
  "build": {
    "asar": false,
    "linux": {
      "target": [
        "zip",
        "AppImage"
      ],
      "category": "Games",
      "artifactName": "${name}_${version}_linux.${ext}"
    },
    "extraFiles": [
      "com.github.hmlendea.${name}.desktop"
    ]
  },
  "repository": "https://github.com/hmlendea/gfn-electron",
  "keywords": [
    "Electron",
    "gfn",
    "geforcenow",
    "geforce-now"
  ],
  "author": "Hora»õiu Mlendea <io.github.hmlendea.cnzq9@SimpleLogin.fr>",
  "license": "GPL-3.0",
  "devDependencies": {
    "electron": "^35.0.2",
    "electron-builder": "^25.1.8",
    "eslint": "^8.51.0",
    "jest": "^29.7.0",
    "prettier": "^2.8.8"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "cheerio": "^1.1.2",
    "discord-rich-presence": "^0.0.8",
    "electron-localshortcut": "^3.2.1",
    "find-process": "^1.4.10"
  }
}
